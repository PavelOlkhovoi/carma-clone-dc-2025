{
  "compileOnSave": false,
  "include": [
    "${configDir}/src/**/*.js",
    "${configDir}/src/**/*.ts",
    "${configDir}/src/**/*.jsx",
    "${configDir}/src/**/*.tsx",
    "${configDir}/*.config.js",
    "${configDir}/*.config.ts",
    "${configDir}/*.config.cjs",
    "${configDir}/*.config.mjs",
    "${configDir}/*.config.mts"
  ],
  "compilerOptions": {
    "target": "es2022",
    "useDefineForClassFields": true,
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "preserve",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "moduleDetection": "force",
    "rootDir": ".",
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "@nx/react/typings/cssmodule.d.ts",
      "@nx/react/typings/image.d.ts",
      "@nx/react/typings/styled-jsx.d.ts"
    ],
    "paths": {
      "@carma-appframeworks/*": ["libraries/appframeworks/*/src/index.ts"],
      "@carma-commons/*": ["libraries/commons/*/src/index.ts"],
      "@carma-commons/utils/*": ["libraries/commons/utils/src/lib/*/index.ts"],
      "@carma-mapping/*": ["libraries/mapping/*/src/index.ts"],
      "@carma-providers/*": ["libraries/providers/*/src/index.ts"],
      "@carma/types": ["libraries/types/src/index.d.ts"],
      
      "@carma-collab/pecher/*": ["libraries/collaboration/carma-pecher-collab/src/*/index.jsx"],
      "@carma-collab/wuppertal/*": ["libraries/collaboration/carma-wuppertal-collab/src/*/index.ts"],
      
      // aliases to carma root
      "@carma/cesium": ["libraries/mapping/engines/cesium/api/src/index.ts"],
      "@carma/leaflet": ["libraries/mapping/engines/leaflet/src/index.ts"],
      "@carma/geo/*": ["libraries/commons/geo/*/src/index.ts"],
      "@carma/geo/types": ["libraries/commons/geo/types/src/index.d.ts"],
      "@carma/math": ["libraries/commons/math/src/index.ts"],
      "@carma/units/helpers": ["libraries/commons/units/helpers/src/index.ts"],
      "@carma/units/types": ["libraries/commons/units/types/src/index.d.ts"],
      // legacy cesium engine alias
      "@carma-mapping/engines/cesium": ["libraries/mapping/engines/cesium/legacy/src/index.ts"]
    }
  }
}
